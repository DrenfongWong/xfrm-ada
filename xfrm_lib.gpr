with "anet";
with "xfrm_thin";
with "xfrm_common";

library project Xfrm_Lib is

   for Source_Dirs use ("src");
   for Object_Dir use "obj/lib/";
   for Library_Name use "xfrmada";
   for Library_Dir use "lib/";
   for Library_Kind use "static";

   Compiler_Switches := Xfrm_Common.Compiler_Switches & "-gnatwale";

   package Compiler is
      for Default_Switches ("ada") use Compiler_Switches;
   end Compiler;

end Xfrm_Lib;

